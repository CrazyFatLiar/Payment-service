<Window x:Class="TZ.Donat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TZ"
        mc:Ignorable="d"
         Height="250" Width="500" ResizeMode="CanMinimize">
    <Grid>
        <StackPanel Margin="0,5,0,0" VerticalAlignment="Center">
            <TextBlock Text="Какую сумму вы хотите ввести?" TextWrapping="Wrap" HorizontalAlignment="Center" Height="37" TextAlignment="Center" Width="203" Margin="0,0,0,10" />
            <TextBox Name="DonatSum" HorizontalAlignment="Center" Background="{x:Null}" BorderBrush="Black" Width="200" Margin="0,5,0,0" PreviewTextInput="DonatSum_PreviewTextInput"  />
        </StackPanel>
        <Button x:Name="Cancel" Style="{DynamicResource ControlButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,115,10" Content="Отменить" Height="25" Width="95" Click="Cancel_Click"/>
        <Button x:Name="Accept" Style="{DynamicResource ControlButton}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,15,10" Content="Принять" Height="25" Width="95" Click="Accept_Click"/>
    </Grid>
</Window>
